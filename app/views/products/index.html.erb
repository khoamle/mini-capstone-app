<div class="jumbotron">
  <h1>All Products for Sale!</h1>
    <% @products.each do |product| %>
      <div id="products">
        <h3><%= product.name %></h3>
        <h4>Price: <%= product.price %></h4>
        <br>
        <img src=<%= product.image %>>
        <br>
        <h4><%= product.description %></h4>
        <br>
        <p><a class="btn btn-primary btn-lg" href="#" role="button">Click to see more</a></p>
        <br>
      </div>
    <% end %>
</div>
